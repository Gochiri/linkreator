// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// --------------------------------------------------------
// CORE ENTITIES (From data-model.md)
// --------------------------------------------------------

model BrandProfile {
  id             String    @id @default(cuid())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  // Attributes
  name           String
  voice          String?   // e.g., "Minimalist", "Actionable"
  writingStyle   String?   // e.g., "Direct", "Storytelling"
  visualPalette  String?   // JSON or string reference
  
  // Relationships
  posts          Post[]
  carousels      Carousel[]
  images         Image[]
  audienceAvatar AudienceAvatar?
}

model AudienceAvatar {
  id             String       @id @default(cuid())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  // Attributes
  profession     String?
  painPoints     String?      // JSON or text
  motivations    String?      // JSON or text
  interests      String?      // JSON or text
  
  // Relationships
  brandProfile   BrandProfile @relation(fields: [brandId], references: [id], onDelete: Cascade)
  brandId        String       @unique
}

model Post {
  id             String        @id @default(cuid())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  // Attributes
  content        String
  format         String?       // "tip", "storytelling", "opinion", "case_study"
  status         String        @default("DRAFT") // DRAFT, PUBLISHED, SCHEDULED
  
  // Relationships
  brandProfile   BrandProfile  @relation(fields: [brandId], references: [id])
  brandId        String
  
  hashtagSets    HashtagSet[]
  calendarEntry  CalendarEntry?
  contentSource  ContentSource? @relation(fields: [sourceId], references: [id])
  sourceId       String?
}

model Carousel {
  id             String        @id @default(cuid())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  // Attributes
  title          String
  topic          String?
  template       String?
  
  // Relationships
  brandProfile   BrandProfile  @relation(fields: [brandId], references: [id])
  brandId        String
  
  slides         Slide[]
  calendarEntry  CalendarEntry?
}

model Slide {
  id             String    @id @default(cuid())
  
  // Attributes
  content        String?
  imageUrl       String?
  position       Int
  
  // Relationships
  carousel       Carousel  @relation(fields: [carouselId], references: [id], onDelete: Cascade)
  carouselId     String
}

model Image {
  id             String        @id @default(cuid())
  createdAt      DateTime      @default(now())
  
  // Attributes
  url            String?
  prompt         String?
  style          String?
  overlayText    String?
  
  // Relationships
  brandProfile   BrandProfile  @relation(fields: [brandId], references: [id])
  brandId        String
  
  calendarEntry  CalendarEntry?
}

model HashtagSet {
  id             String    @id @default(cuid())
  
  // Attributes
  name           String    // e.g., "AI Innovation"
  tags           String    // Comma separated or JSON
  
  // Relationships
  posts          Post[]
}

model CalendarEntry {
  id             String    @id @default(cuid())
  scheduledFor   DateTime
  
  // Polymorphic Relationships (handled via optional foreign keys in Prisma)
  post           Post?     @relation(fields: [postId], references: [id])
  postId         String?   @unique
  
  carousel       Carousel? @relation(fields: [carouselId], references: [id])
  carouselId     String?   @unique
  
  image          Image?    @relation(fields: [imageId], references: [id])
  imageId        String?   @unique
}

model ContentSource {
  id             String    @id @default(cuid())
  createdAt      DateTime  @default(now())
  
  // Attributes
  url            String?
  text           String?   // Pasted content
  type           String    // "youtube", "article", "text"
  keyIdeas       String?   // Extracted ideas
  
  // Relationships
  generatedPosts Post[]
}

// --------------------------------------------------------
// WORKSPACE / CANVAS ENTITIES
// --------------------------------------------------------

model CanvasFolder {
  id             String       @id @default(cuid())
  name           String
  
  notes          CanvasNote[]
  links          CanvasLink[]
}

model CanvasNote {
  id             String       @id @default(cuid())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  title          String
  content        String       // Markdown
  tags           String?      // Simple CSV or JSON
  isFavorite     Boolean      @default(false)
  
  folder         CanvasFolder? @relation(fields: [folderId], references: [id])
  folderId       String?
}

model CanvasLink {
  id             String       @id @default(cuid())
  createdAt      DateTime     @default(now())
  
  url            String
  title          String?
  description    String?
  tags           String?
  
  folder         CanvasFolder? @relation(fields: [folderId], references: [id])
  folderId       String?
}
